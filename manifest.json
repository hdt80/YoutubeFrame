{
    "manifest_version": 2,

    "name": "YoutubeFrame",
    "description": "Single frame movement",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "YoutubeFrame"
    },

    "content_scripts": [
        {
            "matches": ["*://youtube.com/watch*"],
            "js": ["content_script.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "web_accessible_resources": [
        "youtube_frame.js"
    ],

    "permissions": [
        "tabs", "*://youtube.com/watch*"
    ]

}